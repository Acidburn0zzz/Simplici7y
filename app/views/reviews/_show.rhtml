<% if show && show.item %>
	<% if permission(show) %>
		<%= link_to "delete", item_review_url(show.item, show), :confirm => "Are you sure you want to delete this review?\n\"#{show.title}\" by #{show.user.login}", :method => :delete %>
		<%= link_to "edit", edit_item_review_url(show.item, show) %>
		<%= show.relevancy.to_s + ' relevancy' if admin? %>
		
	<% end %>
	<div class="review relevancy-<%= show.relevancy.to_s %>">
		<%= stars(show.rating) %>
		<h3><%= link_to clean(show.title), item_path(show.item) %> <%= '( ' + clean(show.item.name) + ' )' if controller.action_name != 'show' %></h3>
		<h4><%= link_to clean(show.user.login), user_path(show.user) %> on <%= show.created_at.to_s(:readable_short) %>, Version <%= clean(show.version.name) %></h4>
		<div class="indent">
			<%= format(show.body) %>
		</div>
	</div>
	<hr class="clear">
<% end %>
