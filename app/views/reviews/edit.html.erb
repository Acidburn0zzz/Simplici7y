<%= error_messages_for :child %>

<% form_for(:child, :url => item_review_path(@item, @child), :html => { :method => :put, :class => "cmxform" }) do |f| %>

  <%= render :partial => 'form', :locals => {:f => f} %>

  <p>
	  <%= submit_tag 'Save changes', :class => 'button positive accept' %> or <%= link_to 'Cancel', item_path(@item), :class => 'button negative cancel' %>
  </p>
<% end %>