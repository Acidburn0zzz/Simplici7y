	<% if controller.controller_name == 'tags' && params[:id] %>
		<h2>Search <%= clean(params[:id]) %></h2></h2>
		<ul><li><% form_tag(tag_url(params[:id]), :method => :get) do %> <%= text_field_tag :search, params[:search] %> <% end %></li></ul>
