  
  <% placeholder = 'Search' %>
  <% url = items_url %>

	<% if controller.controller_name == 'tags' && params[:id] %>
		<% placeholder += ' ' + clean(params[:id]) %>
		<% url = tag_url(params[:id]) %>
	<% elsif controller.controller_name == 'users' && params[:id] %>
		<% placeholder += ' ' + clean(@user.login) %>
		<% url = user_url(params[:id]) %>
	<% elsif controller.controller_name == 'items' && params[:id] && @item.tc_id == 0 %>
		<% placeholder += ' ' + clean(@item.name) %>
		<% url = item_url(params[:id]) %>
	<% end %>

